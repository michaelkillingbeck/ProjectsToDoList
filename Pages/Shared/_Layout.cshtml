<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/brands.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/solid.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/notepad.css" />
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="~/css/create.css" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                @if(User.Identity.IsAuthenticated)
                {
                    <span>Welcome, @User.Identity.Name</span>
                }

                <a class="navbar-brand centred-title" asp-page="/Index">Projects To-Do List</a>

                @if(User.Identity.IsAuthenticated == false)
                {
                    <a class="navbar-brand centred-title" asp-page="Login">Login</a>
                    <a class="navbar-brand centred-title" asp-page="Register">Register</a>
                }
                else
                {
                    <a class="navbar-brand centred-title" asp-page="Login" asp-page-handler="Logout">Logout</a>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <p>version 0.0.0.30</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/index.js" asp-append-version="true"></script>
    <script src="~/js/create.js" type="module"></script>
    <script src="~/js/createNewProject.js" type="module"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
