@page
@model LoginModel

@section Styles{
    <link rel="Stylesheet" href="~/css/login.css" />
}

<div class="notepad-page-container">
    <div class="notepad-content">
        <ul class="notepad-page">
            <form id="login-form" method="post">
                <li>
                    <span class="notepad-line-item"></span>
                </li>

                <li>
                    <span class="notepad-line-item">User Name</span>
                </li>

                <li>
                    <input class="notepad-line-item placeholder-input faded-text" 
                        asp-for="SignInUser.UserName" type="text" placeholder="Enter a username...">
                </li>

                <li>
                    <span class="notepad-line-item">Password</span>
                </li>

                <li>
                    <input class="notepad-line-item placeholder-input faded-text" 
                        asp-for="SignInUser.Password" type="password" placeholder="Enter a password...">
                </li>

                <li>
                    <div class="notepad-line-item text-danger" asp-validation-summary="ModelOnly"></div>
                </li>

                <button class="btn notepad-button" type="submit">Sign In</button>
            </form>
        </ul>
    </div>
</div>
